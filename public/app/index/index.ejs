<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>

  <!-- textarea css -->
  <style>
	textarea {
	  width: 100%;
	  height: 100%;
	  border: 1px solid #ccc;
	  padding: 10px;
	  box-sizing: border-box;
	  resize: none;
	}
	button {
		/* 생략 */
		margin: 0;
		padding: 0.5rem 1rem;

		font-family: "Noto Sans KR", sans-serif;
		font-size: 1rem;
		font-weight: 400;
		text-align: center;
		text-decoration: none;

		display: inline-block;
		width: auto;

		border: none;
		border-radius: 4px;
	}
	input[type=text]{
		/* 생략 */
		margin: 0;
		padding: 0.5rem 1rem;

		font-family: "Noto Sans KR", sans-serif;
		font-size: 1rem;
		font-weight: 400;
		text-align: center;
		text-decoration: none;

		display: inline-block;
		width: auto;

		border: none;
		border-radius: 4px;
	}
  </style>

</head>
<body>

  	<!-- test input -->
	<input type="text" id="test" value="200">

	<!-- test button -->
	<button id="testBtn">test</button>

	<!-- test input -->
	<input type="text" id="test400" value="400">

	<!-- test button -->
	<button id="test400Btn">test</button>

	<!-- textarea -->
	<textarea id="testArea" cols="30" rows="10"></textarea>

	<!-- import public.js -->
	<script src="/public/app/index/script.js" type="module"></script>
  
